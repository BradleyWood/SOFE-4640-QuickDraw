<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".RoundInfoFragment">

    <Button
            android:text="@string/play"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/beginRoundBtn"
            android:background="@color/colorPrimary"
            app:layout_constraintStart_toEndOf="@+id/drawings3"
            app:layout_constraintEnd_toStartOf="@+id/drawings3"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/roundInfo"
            android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="@+id/banner3"
            app:layout_constraintVertical_bias="0.277"/>
    <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/drawings3"
            app:srcCompat="@drawable/ic_drawings"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintVertical_bias="0.0"
            android:layout_marginBottom="2dp"
            android:layout_marginTop="-128dp"/>
    <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/banner3"
            app:srcCompat="@drawable/ic_banner"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintVertical_bias="0.0"
            android:layout_marginTop="-128dp"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/roundInfo"
            app:layout_constraintStart_toEndOf="@+id/drawings3"
            app:layout_constraintEnd_toStartOf="@+id/drawings3"
            android:layout_marginTop="392dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintHorizontal_bias="0.498"/>

</android.support.constraint.ConstraintLayout>
